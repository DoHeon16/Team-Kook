<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".UserActivity"
    android:orientation="vertical">

<TextView
android:id="@+id/textView9"
android:layout_width="match_parent"
android:layout_height="80dp"
android:background="#FFBFC604"
android:gravity="center_vertical"
android:text="     회원 정보 수정"
android:textColor="#000000"
android:textSize="24sp" />

<Space
android:layout_width="match_parent"
android:layout_height="30dp" />

<LinearLayout
android:layout_width="match_parent"
android:layout_height="75dp"
android:orientation="horizontal">

<TextView
    android:id="@+id/id"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="5dp"
    android:layout_weight="1"
    android:gravity="right|center_vertical"
    android:textColor="#000000"
    android:textSize="30sp"
    android:textStyle="bold" />

<TextView
    android:id="@+id/textView10"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginVertical="5dp"
    android:layout_marginRight="80dp"
    android:layout_weight="1"
    android:gravity="left|center_vertical"
    android:text="님"
    android:textColor="#000000"
    android:textSize="18sp" />


</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="70dp"
android:orientation="horizontal">

<TextView
    android:id="@+id/textView2"
    android:layout_width="103dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5sp"
    android:layout_weight="1"
    android:ems="4"
    android:text="비밀번호"
    android:textAlignment="center"
    android:textColor="#000000"
    android:textSize="18sp" />

<EditText
    android:id="@+id/password"
    android:layout_width="199dp"
    android:layout_height="match_parent"
    android:layout_marginVertical="5sp"
    android:layout_marginLeft="5sp"
    android:layout_marginRight="100sp"
    android:layout_weight="1"
    android:ems="10"
    android:inputType="textPassword" />

</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="70dp"
android:orientation="horizontal">

<TextView
    android:id="@+id/textcheckpw"
    android:layout_width="101dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5sp"
    android:layout_weight="1"
    android:text="비밀번호\n확인"
    android:textAlignment="center"
    android:textColor="#000000"
    android:textSize="18sp" />

<EditText
    android:id="@+id/checkpw"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:layout_marginVertical="5sp"
    android:layout_marginLeft="5sp"
    android:layout_marginRight="100sp"
    android:layout_weight="1"
    android:ems="10"
    android:inputType="textPassword" />

</LinearLayout>



<CheckBox
android:id="@+id/vegan"
android:layout_width="207dp"
android:layout_height="wrap_content"
android:layout_marginHorizontal="150sp"
android:layout_marginVertical="10sp"
android:text="비건"
android:textColor="#000000"
android:textSize="18sp"
android:textStyle="bold" />

<TextView
android:id="@+id/textView7"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginVertical="3sp"
android:layout_marginLeft="5sp"
android:text="아래 항목 중 알레르기가 있는 것을 체크해주세요.(중복 가능)"
android:textColor="#000000"
android:textSize="16sp" />

<LinearLayout
android:layout_width="match_parent"
android:layout_height="50dp"
android:orientation="horizontal">

<CheckBox
    android:id="@+id/peanut"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:layout_weight="1"
    android:textSize="18dp"
    android:text="땅콩" />

<CheckBox
    android:id="@+id/milk"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:layout_weight="1"
    android:textSize="18dp"
    android:text="우유" />

<CheckBox
    android:id="@+id/egg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:layout_weight="1"
    android:textSize="18dp"
    android:text="달걀" />
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">

<CheckBox
    android:id="@+id/crustacean"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:layout_weight="1"
    android:textSize="18dp"
    android:text="갑각류" />

<CheckBox
    android:id="@+id/flour"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:textSize="18dp"
    android:layout_weight="1"
    android:text="밀가루" />

<CheckBox
    android:id="@+id/peach"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:textSize="18dp"
    android:layout_weight="1"
    android:text="복숭아" />
</LinearLayout>


<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">

